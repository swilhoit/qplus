rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
    }
    
    // Content files - read access for authenticated users
    match /content/{contentId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only through Admin SDK
    }
    
    // Public assets - read access for everyone
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only through Admin SDK
    }
    
    // Temporary uploads for admin bulk upload
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && get(/databases/firestore/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}